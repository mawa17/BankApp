@page "/dashboard"
@using Frontend.Components.Layout
@using Frontend.Services;
@inject AuthService Auth
@layout MainLayout

<div class="section-card">
    <TopBar Mode="TopBar.TopBarMode.Dashboard" />

    <div class="dashboard-content">
        <!-- Saldo -->
        <div class="balance-actions-row">
            <div class="balance-card">
                <h2>Saldo</h2>
                <p id="balance">@(Auth.IsLoggedIn ? "DKK 12.345,67" : "0,00")</p>
            </div>
            <!-- Hæv, Indsæt, Overfør knapper -->
            <div class="actions">
                <button class="btn-action">HÆV</button>
                <button class="btn-action">INDSÆT</button>
                <button class="btn-action">OVERFØR</button>
            </div>
        </div>

        <!-- Transaction overview -->
        <div class="transactions">
            <div class="transactions-header">
                <h3>Seneste transaktioner</h3>
                <input type="text" placeholder="Søg efter transaktion..." class="transactions-search"/>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Fra</th>
                        <th>Dato</th>
                        <th>Type</th>
                        <th>Beløb</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="transaction-cell">Rasmus</td>
                        <td class="transaction-cell">01-11-2025</td>
                        <td class="transaction-cell">Indsæt</td>
                        <td class="transaction-cell">DKK 500,00</td>
                    </tr>
                    <tr>
                        <td class="transaction-cell">Lønkonto</td>
                        <td class="transaction-cell">03-11-2025</td>
                        <td class="transaction-cell">Overførsel</td>
                        <td class="transaction-cell">DKK -1.200,00</td>
                    </tr>
                    <tr>
                        <td class="transaction-cell">ATM transaction</td>
                        <td class="transaction-cell">05-11-2025</td>
                        <td class="transaction-cell">Hæv</td>
                        <td class="transaction-cell">DKK -300,00</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



